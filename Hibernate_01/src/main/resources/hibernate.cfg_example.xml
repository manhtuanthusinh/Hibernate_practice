<hibernate-configuration>
    <session-factory>

        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">your_url_postgresql</property>
        <property name="hibernate.connection.username">your_postgresql_username</property>
        <property name="hibernate.connection.password">YOUR_PASSWORD_NOT_MINE</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.order_inserts">true</property>
        <property name="hibernate.order_updates">true</property>

        <!--mapping-->
        <mapping class = "model.User"/>

    </session-factory>
</hibernate-configuration>